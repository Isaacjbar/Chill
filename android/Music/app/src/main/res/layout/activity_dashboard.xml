<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Mensaje de bienvenida -->
    <TextView
        android:id="@+id/tvWelcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola, ¿qué te gustaría practicar hoy?"
        android:textSize="20sp"
        android:textColor="@color/spotify_white"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Contenedor para los botones de opciones -->
    <GridLayout
        android:id="@+id/optionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginBottom="24dp">

        <!-- Los botones se generarán dinámicamente -->
    </GridLayout>

    <!-- Botón de progreso -->
    <Button
        android:id="@+id/btnViewProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver progreso"
        android:padding="16dp"
        android:textColor="@color/spotify_white"
        android:textStyle="bold"
        android:background="@drawable/rounded_button"
        android:layout_gravity="center"
        android:textAllCaps="false"/>
</LinearLayout>
